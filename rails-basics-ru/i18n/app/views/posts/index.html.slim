- content_for :title do
  / page title (h2)
  / BEGIN
  h2
    = t('.title')
  / END

table.table.table-striped.table-hover.mb-5
  thead
    tr
      th{ scope = 'col' } #
      th{ scope = 'col' }
        / table title
        / BEGIN
        = t('.table_title')
        / END
      th
      th

  tbody
    - @posts.each_with_index do |post, i|
      tr
        th{ scope = 'row' } = i + 1
        td = post.title
        td
          / comments count
          / BEGIN
          = t('.comment_count', count: post.comments.size)
          / END
        td.d-flex
          / posts links
          / BEGIN
          = link_to t('show'), post, class: 'me-4'
          = link_to t('edit'), edit_post_path(post), class: 'me-4'
          = link_to t('destroy'), post, data: { confirm: t('destroy_confirmation') }, method: :delete
          / END

/ new post link
= link_to new_post_path, id: 'new-post-link', class: 'btn btn-primary' do
  / BEGIN
  = t('.new_post')
  / END
