<p id="notice"><%= notice %></p>

<h1><%= t('.all') %></h1>
<h1><%= t('non_exists.all', default: :'fallback.all_users') %></h1>

<p> <%= User.model_name.human(count: 100)  %></p>
<p><%= t('.created_count', count: User.count)%>

<table>
  <thead>
    <tr>
      <th><%= t('first_name', scope: 'users') %></th>
      <th><%= t('last_name', scope: 'users') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= link_to t('actions.show'), user %></td>
        <td><%= link_to t('actions.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('actions.destroy'), user, method: :delete, data: { confirm: t('actions.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('users.new_user'), new_user_path %>
